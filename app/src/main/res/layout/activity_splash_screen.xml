<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashScreen"
    android:background="@drawable/jack_reacher1">

    <ImageView
        android:id="@+id/splash_icon"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:src="@drawable/mlogo"
        android:layout_marginTop="230dp"
        app:layout_constraintBottom_toTopOf="@id/splash_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.426" />

    <TextView
        android:id="@+id/splash_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="32dp"
        android:fontFamily="@font/bangers"
        android:text="MOVIE V"
        android:textAlignment="center"
        android:textColor="@color/base_color"
        android:textSize="45sp"
        android:textStyle="normal"
        app:layout_constraintBottom_toBottomOf="@id/splash_icon"
        app:layout_constraintEnd_toEndOf="@id/splash_icon"
        app:layout_constraintStart_toStartOf="@id/splash_icon"
        app:layout_constraintTop_toBottomOf="@id/splash_icon" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/alata"
        android:text=" Movie Recommendation App"
        android:textAlignment="center"
        android:textColor="#E2E4E4E4"
        android:textSize="19sp"
        android:id="@+id/label2"


        app:layout_constraintTop_toBottomOf="@id/splash_label" />
</androidx.constraintlayout.widget.ConstraintLayout>